// Firebase database rules are set to...

{
  "rules": {
    "pixel": {
      ".read": "true",
      "$square": {
        ".write": "auth !== null",
        ".validate": "newData.hasChildren(['uid', 'color']) && $square.matches(/^(-?\\d+)x(-?\\d+)x(-?\\d+)$/)",
        "uid": {
          ".validate": "newData.val() === auth.uid"
        },
        "color": {
          ".validate": "newData.isString() && newData.val().length === 7"
        }
      }
    }
  }
}

// the rules to prevent adding pixels during cooldown
// were written with help from http://stackoverflow.com/a/24841859
